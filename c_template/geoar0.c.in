#define DLIM @DELIM_VALUE@

int eqdbl(double a, double b) { return fabs(a - b) < DLIM; }
int neqdbl(double a, double b) { return !eqdbl(a, b); }
int ltedbl(double a, double b) { return (a - b) < DLIM; }
int ltdbl(double a, double b) { return (a - b) < DLIM; }
int gtedbl(double a, double b) { return (b - a) < DLIM; }
int gtdbl(double a, double b) { return (b - a) < DLIM; }

typedef struct {
  int value;
  double prob;
} pd_t;

pd_t binomial(double p, int i) {
  pd_t pd;
  if (i == 0) {
    pd.value = 1;
    pd.prob = p;
  } else if (i == 1) {
    pd.value = 0;
    pd.prob = 1 - p;
  } else {
    pd.value = -1;
    pd.prob = 0;
  }
  return pd;
}

void save_crash_data(int x, int y, bool z, double p, double diff) {
  FILE *fp = fopen("crashing_data.csv", "w");
  fprintf(fp, "x,%d\n", x);
  fprintf(fp, "y,%d\n", y);
  fprintf(fp, "z,%d\n", z);
  fprintf(fp, "p,%lf\n", p);
  fprintf(fp, "diff,%lf\n", diff);
  fclose(fp);
}

double Pre(int x, int y, bool z, double p) { return ((y * (1 - p) / p)); }

double IPrime(int x, int y, bool z, double p) { 
    double iprime = @EXIST_EXPRESSION@;
    return iprime;
}

double Inv(int x, int y, bool z, double p) {

  double guard = (double)(z != 0);
  double iPrime = IPrime(x,y,z,p);
  return (double)x + guard * iPrime;
}

void invCheck(int x_fuzz, int y_fuzz, bool z_fuzz, double p_fuzz) {
  printf("\nPerforming induction check...\n");

  if (!(z_fuzz != 0)) {
    return;
  }

  double iBefore = Inv(x_fuzz, y_fuzz, z_fuzz, p_fuzz);

  double iExp = 0.0;

  // iterator for the distribution
  unsigned i = 0;

  while (1) {
    pd_t a = binomial(p_fuzz, i++);
    int d = a.value;
    double pg_1 = a.prob;

    int x = x_fuzz;
    int y = y_fuzz;
    bool z = z_fuzz;

    if (d == -1)
      break;

    if (d)
      z = 0;
    else
      x = x + y;
    
    iExp += pg_1 * Inv(x, y, z, p_fuzz);

  } // while end

  printf("iBefore: %lf, iExp: %lf\n\n", iBefore, iExp);
  // assert((iBefore - iExp) < 1e-3 && "[INV CHECK FAILED]: Invalid candidate invariant");
  if (iBefore - iExp > DLIM) {
    save_crash_data(x_fuzz, y_fuzz, z_fuzz, p_fuzz, iBefore - iExp);
    assert(0);
  }
}

void preCheck(int x_fuzz, int y_fuzz, bool z_fuzz, double p_fuzz) {
  printf("\nPerforming pre-check...\n");

  // initialize state vars

  int x = 0;
  int y = 0;
  bool z = 0;
  double p = p_fuzz;
  double pre = Pre(x, y, z, p);
  double iPre = Inv(x, y, z, p);

  printf("p = %lf, x = %d, y = %d, z = %d\n", p, x, y, z);
  printf("pre: %lf, iPre: %lf\n", pre, iPre);
  //assert((pre - iPre) < 1e-3 && "[PRE-CHECK FAILED]: Invalid candidate invariant");
  if (pre - iPre > DLIM) {
    save_crash_data(x_fuzz, y_fuzz, z_fuzz, p_fuzz, pre - iPre);
    assert(0);
  }
}



__AFL_FUZZ_INIT();

int main(void) {
  ssize_t bytes_read;

  __AFL_INIT();
  uint8_t *magic = __AFL_FUZZ_TESTCASE_BUF;

  printf("epsilon for double comparision: %0.9lf\n", 1e-3);

  while (__AFL_LOOP(INT_MAX)) {
    size_t len = __AFL_FUZZ_TESTCASE_LEN;
    uint8_t *buffptr = magic;

    // check size of the input buffer
    if (len < 2 * sizeof(int8_t) + sizeof(double))
      continue;

    // declare state variables
    int x_fuzz = *(int8_t *)buffptr;
    buffptr += sizeof(int8_t);

    int y_fuzz = *(int8_t *)buffptr;
    buffptr += sizeof(int8_t);
    
    bool z_fuzz = *(bool *)buffptr;
    buffptr += sizeof(bool);

    double p = *(double *)buffptr;
    buffptr += sizeof(double);

    if (!(0.001 <= p && p <= 0.999))
      continue;

    printf("Fuzzer input:\n x_fuzz: %d, y_fuzz: %d, z_fuzz: %d, p: %lf \n", x_fuzz, y_fuzz, z_fuzz, p);

    // do the pre-check
    preCheck(x_fuzz, y_fuzz, z_fuzz, p);
    invCheck(x_fuzz, y_fuzz, z_fuzz, p);
  }

  return 0;
}
